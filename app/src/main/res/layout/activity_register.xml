<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/r1Header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/logov"
            android:src="@drawable/logov"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:background="@drawable/shape_right_panel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r1Header"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/LoginPanel"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/r1Header"
        android:layout_width="match_parent"
        android:background="@drawable/shape_login_panel"
        android:paddingTop="70dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical"
        android:layout_height="350dp">

        <EditText
            android:id="@+id/s_email_id"
            android:hint="Email"
            android:drawableRight="@drawable/g2"
            android:background="@drawable/edit_text_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText
            android:id="@+id/s_pass_id"
            android:hint="Password"
            android:drawableRight="@drawable/p2"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/s_conPass_id"
            android:hint="Confirm Password"
            android:drawableRight="@drawable/p1"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>



    </LinearLayout>
    <Button

        android:id="@+id/signup_button_s"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_button"
        android:layout_width="150dp"
        android:layout_marginBottom="55dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/top_login2"
        android:text="Login"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="245dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/top_signup2"
        android:text="SignUp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="245dp"
        android:gravity="right"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>