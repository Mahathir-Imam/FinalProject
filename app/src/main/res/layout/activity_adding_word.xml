<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_margin="35dp"
    android:layout_height="match_parent"
    tools:context=".AddingWord">

    <TextView
        android:id="@+id/setWord"
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Enter Your Word."
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="16sp"/>


    <EditText

        android:id="@+id/word"
        android:layout_width ="260dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/word_bg"
        android:hint="Word"
        android:textSize="16sp"
        android:textColor="@color/blue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/meaningid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meaning"

            android:layout_margin="5dp"

            android:layout_marginTop="5dp"
            android:textColor="#15257A"
            />


    </LinearLayout>


    <EditText
        android:id="@+id/meaning"
        android:layout_width="260dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_height="40dp"
        android:background="@drawable/word_bg"
        android:hint="Meaning"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/sentenceid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sentence"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#15257A"
        />

    <EditText
        android:id="@+id/explanation"
        android:layout_width="260dp"
        android:layout_height="110dp"
        android:gravity="start|top"
        android:layout_marginTop="15dp"
        android:background="@drawable/word_bg"
        android:hint="Example Here"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/buttonAdd"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:layout_marginTop="40dp"
        android:text="Add" />


</LinearLayout>